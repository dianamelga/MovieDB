<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="poppins_semibold">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="fontPath">font/poppins_semibold.ttf</item>
        <item name="android:textSize">@dimen/sp_20px</item>
        <item name="android:lineHeight">@dimen/dp_30px</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="poppins_medium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="fontPath">font/poppins_medium.ttf</item>
        <item name="android:textSize">@dimen/sp_12px</item>
        <item name="android:lineHeight">@dimen/dp_18px</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="poppins_regular">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="fontPath">font/poppins_regular.ttf</item>
        <item name="android:textSize">@dimen/sp_12px</item>
        <item name="android:lineHeight">@dimen/dp_18px</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="transparent_button">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontPath">font/poppins_semibold.ttf</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textFontWeight">600</item>
        <item name="cornerRadius">@dimen/dp_6px</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineHeight">@dimen/sp_21px</item>
        <item name="android:background">@drawable/transparent_button_bg</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">@dimen/dp_446px</item>
        <item name="android:layout_height">@dimen/dp_100px</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>